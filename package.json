{
  "name": "setup-vind",
  "version": "0.1.0",
  "description": "GitHub Action to provision Kubernetes clusters via vCluster Docker driver (vind)",
  "main": "dist/main/index.js",
  "scripts": {
    "build": "npm run build:main && npm run build:post",
    "build:main": "ncc build --minify -o dist/main src/main.ts",
    "build:post": "ncc build --minify -o dist/post src/post.ts",
    "lint": "eslint '**/*.ts'",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/loft-sh/setup-vind.git"
  },
  "license": "MIT",
  "dependencies": {
    "@actions/artifact": "^2.1.11",
    "@actions/cache": "^4.0.0",
    "@actions/core": "^1.11.1",
    "@actions/exec": "^1.1.1",
    "@actions/glob": "^0.5.0",
    "@actions/io": "^1.1.3",
    "@actions/tool-cache": "^2.0.1",
    "semver": "^7.6.3",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.0",
    "@types/semver": "^7.5.8",
    "@types/uuid": "^10.0.0",
    "@vercel/ncc": "^0.38.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.4",
    "typescript": "^5.6.0"
  }
}
